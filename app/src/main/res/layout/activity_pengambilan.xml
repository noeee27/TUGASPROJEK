<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFF6FB">

    <!-- Icon -->
    <ImageView
        android:id="@+id/imgSuccess"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_check"
        app:tint="#6C4AB6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Judul -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesanan Berhasil"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imgSuccess"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Deskripsi -->
    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Silakan datang ke toko untuk mengambil barang dan segera melakukan transaksi pembayaran."
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Info Toko -->
    <TextView
        android:id="@+id/tvInfoToko"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸ“ Toko CampingKen\nâ° Jam buka: 08.00 - 20.00"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Tombol Kembali -->
    <Button
        android:id="@+id/btnKembali"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:text="Kembali ke Beranda"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:backgroundTint="#6C4AB6"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvInfoToko"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
